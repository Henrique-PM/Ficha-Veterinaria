                <input type="email" id="email" name="email" class="form-control" placeholder="Seu e-mail" required>
            </div>
            
            <div class="form-group">
                <label for="password">Senha</label>
                <input type="password" id="password" name="password" class="form-control" placeholder="Sua senha" required>
            </div>
            
            <div class="form-group">
                <label for="type">Tipo de Usu√°rio</label>
                <select id="type" name="type" class="form-control" required>
                    <option value="">Selecione...</option>
                    <option value="veterinario">Veterin√°rio</option>
                    <option value="visualizador">Visualizador</option>
                </select>
            </div>
            
            <button type="submit" class="btn btn-primary">Registrar</button>
        </form>

        <div class="auth-footer">
