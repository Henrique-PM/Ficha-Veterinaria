<style>
  .user-container{max-width:1200px;margin:20px auto;padding:0 16px;color:#e0e0e0}
  .header{display:flex;justify-content:space-between;align-items:center;margin:16px 0}
  .grid{display:grid;grid-template-columns:repeat(auto-fill,minmax(260px,1fr));gap:16px}
  .card{background:#1e1e1e;border:1px solid #333;border-radius:10px;overflow:hidden}
  .photo{height:180px;background:#0a0a0a;background-size:cover;background-position:center}
  .body{padding:12px}
  .meta{display:flex;gap:8px;flex-wrap:wrap;color:#adb5bd;font-size:.85rem}
  .badge{padding:2px 8px;border-radius:12px;background:#2c2c2c}
  a.btn{display:inline-block;margin-top:10px;padding:8px 12px;border-radius:6px;background:#4e73df;color:#fff;text-decoration:none}
</style>
<div class="user-container">
  <div class="header">
    <h2>Animais Dispon√≠veis</h2>
    <a href="/auth/logout" class="btn">Sair</a>
  </div>
  <div class="grid">
    {{#each animals}}
      <div class="card">
        <div class="photo" style="background-image:url('/animal/photo/{{this.id}}')"></div>
        <div class="body">
          <h4>{{this.name}}</h4>
          <div class="meta">
            <span class="badge">{{this.species}}</span>
            <span class="badge">{{this.sex}}</span>
            <span class="badge">{{this.age}} anos</span>
            <span class="badge">{{this.status}}</span>
          </div>
          <a href="/user/animal/{{this.id}}" class="btn">Ver Ficha</a>
        </div>
      </div>
    {{/each}}
  </div>
</div>
                <p>{{em_tratamento}}</p>

            </div>
