    <script>
        // Adiciona efeito de hover nos cards
        document.querySelectorAll('.animal-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-5px)';
                this.style.boxShadow = '0 5px 15px rgba(0, 0, 0, 0.4)';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = '';
                this.style.boxShadow = '0 0 10px rgba(0, 0, 0, 0.3)';
            });
        });

        // Atualiza dinamicamente o status das classes
        document.querySelectorAll('.animal-status').forEach(status => {
            const statusText = status.textContent.toLowerCase();
            status.classList.remove('status-treatment');
            
            if (statusText.includes('adotado')) {
                status.classList.add('status-adopted');
            } else if (statusText.includes('abrigo')) {
                status.classList.add('status-shelter');
            } else {
                status.classList.add('status-treatment');
            }
        });
    </script>
