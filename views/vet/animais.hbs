            font-weight: 700;
            margin: 0;
        }

        /* Animal Cards */
        .animals-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
        }

        .animal-card {
            background-color: var(--dark-card);
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
            transition: all 0.3s;
        }

        .animal-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.4);
        }

        .animal-image {
            height: 200px;
            background-size: cover;
            background-position: center;
            position: relative;
        }

        .animal-status {
            position: absolute;
            top: 15px;
            right: 15px;
            padding: 0.25rem 0.75rem;
            border-radius: 50px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
        }

        .status-treatment {
            background-color: var(--warning-color);
            color: #000;
        }

        .status-adopted {
            background-color: var(--success-color);
            color: #fff;
        }

        .status-shelter {
            background-color: var(--info-color);
            color: #fff;
        }

        .animal-info {
            padding: 20px;
        }

        .animal-name {
            font-size: 1.3rem;
            margin-bottom: 15px;
            color: var(--text-light);
        }

        .animal-details {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-bottom: 20px;
        }

        .animal-detail {
            background-color: rgba(255, 255, 255, 0.1);
            padding: 0.25rem 0.75rem;
            border-radius: 50px;
            font-size: 0.8rem;
        }

        .animal-actions {
            display: flex;
            gap: 10px;
        }

        .btn-primary {
            background-color: var(--primary-color);
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            font-weight: 500;
            transition: all 0.3s;
        }

        .btn-primary:hover {
            background-color: var(--primary-hover);
        }

        .btn-outline {
            background-color: transparent;
            border: 1px solid var(--primary-color);
            color: var(--primary-color);
            padding: 0.5rem 1rem;
            border-radius: 5px;
            font-weight: 500;
            transition: all 0.3s;
        }

        .btn-outline:hover {
            background-color: rgba(78, 115, 223, 0.1);
        }

        /* Responsive */
        @media (max-width: 992px) {
            .sidebar {
                width: 80px;
            }
            .sidebar-brand-text, .nav-link span {
                display: none;
            }
            .nav-link {
                text-align: center;
                padding: 1rem 0;
            }
            .nav-link i {
                margin-right: 0;
                font-size: 1.2rem;
            }
            .main-content {
                margin-left: 80px;
            }
        }

        @media (max-width: 768px) {
            .stats-container {
                grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            }
            .animals-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>

