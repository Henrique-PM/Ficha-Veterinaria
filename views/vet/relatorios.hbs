<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Relat√≥rios - VetCare</title>
    <link rel="stylesheet" href="/css/minimal.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <nav class="sidebar">
        <div class="logo">üêæ VetCare</div>
        <ul class="nav">
            <li><a href="/vet/dashboard"><i class="fas fa-home"></i><span>Dashboard</span></a></li>
            <li><a href="/vet/biblioteca"><i class="fas fa-image"></i><span>Biblioteca</span></a></li>
            <li><a href="/vet/consultas"><i class="fas fa-stethoscope"></i><span>Consultas</span></a></li>
            <li><a href="/vet/medicamentos"><i class="fas fa-pills"></i><span>Medicamentos</span></a></li>
            <li><a href="/vet/relatorios" class="active"><i class="fas fa-chart-line"></i><span>Relat√≥rios</span></a></li>
            <li style="margin-top: auto;"><a href="/auth/logout"><i class="fas fa-sign-out-alt"></i><span>Sair</span></a></li>
        </ul>
    </nav>

    <div class="main">
        <div class="topbar">
            <h1>üìä Relat√≥rios e Estat√≠sticas</h1>
        </div>

        <!-- KPIs Principais -->
        <div class="stats">
            <div class="stat">
                <div class="stat-icon">üêï</div>
                <div class="stat-label">Total de Animais</div>
                <div class="stat-value">{{stats.total_animais}}</div>
            </div>
            <div class="stat">
                <div class="stat-icon">üíâ</div>
                <div class="stat-label">Vacinas (M√™s)</div>
                <div class="stat-value">{{stats.vacinas_mes}}</div>
            </div>
            <div class="stat">
                <div class="stat-icon">ü©∫</div>
                <div class="stat-label">Consultas (M√™s)</div>
                <div class="stat-value">{{stats.consultas_mes}}</div>
            </div>
            <div class="stat">
                <div class="stat-icon">‚ù§Ô∏è</div>
                <div class="stat-label">Adotados</div>
                <div class="stat-value">{{stats.animais_adotados}}</div>
            </div>
        </div>

        <!-- Gr√°ficos e Tabelas -->
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 20px;">
            <!-- Distribui√ß√£o por Esp√©cie -->
            <div class="card">
                <h3><i class="fas fa-chart-pie"></i> Distribui√ß√£o por Esp√©cie</h3>
                {{#if por_especie.length}}
                <div style="position: relative; height: 250px; margin-bottom: 20px;">
                    <canvas id="chart-especie"></canvas>
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>Esp√©cie</th>
                            <th>Quantidade</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each por_especie}}
                        <tr>
                            <td><i class="fas fa-paw"></i> {{this.species}}</td>
                            <td><span class="badge badge-primary">{{this.count}}</span></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{else}}
                <div class="empty">Sem dados dispon√≠veis</div>
                {{/if}}
            </div>

            <!-- Distribui√ß√£o por Status -->
            <div class="card">
                <h3><i class="fas fa-chart-bar"></i> Distribui√ß√£o por Status</h3>
                {{#if por_status.length}}
                <div style="position: relative; height: 250px; margin-bottom: 20px;">
                    <canvas id="chart-status"></canvas>
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>Status</th>
                            <th>Quantidade</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each por_status}}
                        <tr>
                            <td><span class="badge badge-success">{{this.status}}</span></td>
                            <td><strong>{{this.count}}</strong></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{else}}
                <div class="empty">Sem dados dispon√≠veis</div>
                {{/if}}
            </div>
        </div>

        <!-- Resumo Geral -->
        <div class="card">
            <h3><i class="fas fa-info-circle"></i> Resumo Geral</h3>
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 15px;">
                <div style="padding: 15px; background: rgba(91, 90, 255, 0.1); border-radius: 8px; border-left: 4px solid var(--primary);">
                    <div style="font-size: 0.9rem; color: var(--muted); margin-bottom: 5px;">Total de Registros</div>
                    <div style="font-size: 1.8rem; font-weight: 700; color: var(--primary);">{{stats.total_animais}}</div>
                </div>
                <div style="padding: 15px; background: rgba(16, 185, 129, 0.1); border-radius: 8px; border-left: 4px solid var(--success);">
                    <div style="font-size: 0.9rem; color: var(--muted); margin-bottom: 5px;">Adotados Este M√™s</div>
                    <div style="font-size: 1.8rem; font-weight: 700; color: var(--success);">{{stats.animais_adotados}}</div>
                </div>
                <div style="padding: 15px; background: rgba(245, 158, 11, 0.1); border-radius: 8px; border-left: 4px solid var(--warning);">
                    <div style="font-size: 0.9rem; color: var(--muted); margin-bottom: 5px;">Consultas Este M√™s</div>
                    <div style="font-size: 1.8rem; font-weight: 700; color: var(--warning);">{{stats.consultas_mes}}</div>
                </div>
                <div style="padding: 15px; background: rgba(239, 68, 68, 0.1); border-radius: 8px; border-left: 4px solid var(--danger);">
                    <div style="font-size: 0.9rem; color: var(--muted); margin-bottom: 5px;">Vacina√ß√µes Este M√™s</div>
                    <div style="font-size: 1.8rem; font-weight: 700; color: var(--danger);">{{stats.vacinas_mes}}</div>
                </div>
            </div>
        </div>

        <!-- √öltima Atualiza√ß√£o -->
        <div style="text-align: center; color: var(--muted); font-size: 0.9rem; margin-top: 20px; padding: 20px; background: var(--bg); border-radius: 8px;">
            üìÖ Dados atualizados em tempo real ‚Ä¢ √öltima sincroniza√ß√£o: {{today}}
        </div>
    </div>

    <script>
        // Dados para os gr√°ficos
        const especieData = {
            labels: [{{#each por_especie}}'{{this.species}}'{{#unless @last}},{{/unless}}{{/each}}],
            datasets: [{
                label: 'Animais por Esp√©cie',
                data: [{{#each por_especie}}{{this.count}}{{#unless @last}},{{/unless}}{{/each}}],
                backgroundColor: ['#5b5aff', '#10b981', '#f59e0b', '#ef4444', '#ec4899'],
                borderColor: 'var(--border)',
                borderWidth: 2
            }]
        };

        const statusData = {
            labels: [{{#each por_status}}'{{this.status}}'{{#unless @last}},{{/unless}}{{/each}}],
            datasets: [{
                label: 'Animais por Status',
                data: [{{#each por_status}}{{this.count}}{{#unless @last}},{{/unless}}{{/each}}],
                backgroundColor: ['#3b82f6', '#10b981', '#f59e0b'],
                borderColor: 'var(--border)',
                borderWidth: 2
            }]
        };

        // Configura√ß√£o dos gr√°ficos
        const chartConfig = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: false
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        stepSize: 1
                    }
                }
            }
        };

        // Renderizar gr√°ficos
        if (document.getElementById('chart-especie')) {
            new Chart(document.getElementById('chart-especie'), {
                type: 'doughnut',
                data: especieData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
        }

        if (document.getElementById('chart-status')) {
            new Chart(document.getElementById('chart-status'), {
                type: 'bar',
                data: statusData,
                options: chartConfig
            });
        }
    </script>
</body>
</html>
</body>
</html>
